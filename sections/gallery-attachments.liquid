<div class="row" id="gallery-{{ section.id }}">
    {% include 'gallery-blocks' %}
</div>





{% schema %}
{
  "name": {
    "en": "Attachments Gallery"
  },
  "class": "shopify-gallery-fencing-attachments",
  "max_blocks": 100,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": {            
        "en": "Gallery Heading"            
      }
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": {
        "en": "Gallery Image"
      },
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": {
            "en": "Image"
          }
        },
        {
          "type": "text",
          "id": "caption",
          "label": {            
            "en": "Image caption"            
          }
        }
      ]
    }
  ],
  "presets": [
    {
      "name": {        
        "en": "Attachments Gallery"       
      },
      "category": {        
        "en": "Image"
      },
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
