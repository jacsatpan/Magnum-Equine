<style>
  {% if section.settings.banner != blank %} 
      {%- assign img_url = section.settings.banner | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
      @media(min-width: 767px) {
        .feat-banner {
          background-image: url('{{ section.settings.banner | img_url: '1600x1000' }}');
        }
      }
  {% endif %}

  {% if section.settings.mb_banner != blank %} 
      {%- assign mb_img_url = section.settings.mb_banner | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
      @media(max-width: 767px) {
        .feat-banner {
          background-image: url('{{ section.settings.mb_banner | img_url: '767x1000' }}');
        }
      }
  {% endif %}
</style>


<div class="container-fluid px-0">
  <div class="row feat-banner slide-up-animation animated">
      

    <div class="col-12 d-flex align-items-md-center align-items-end justify-content-md-start justify-content-center px-md-3 py-1">
      <div class="feat-banner-text text-primary text-md-left text-center p-md-0 py-2 px-1">
        {% if section.settings.heading != blank %}
          <h1 class="{% if section.settings.subheading != blank %}mb-0{% else %}mb-2{% endif %}">{{ section.settings.heading | escape }}</h1>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <h1 class="mb-sm-2 mb-1 subtitle">{{ section.settings.subheading | escape }}</h1>
        {% endif %}

        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="btn btn-outline-primary">
            {{ section.settings.button_label | escape }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>




