
<div class="container-fluid pt-1">
  <div class="row image-row mr-lg-0">
    {%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}


    {% if section.settings.layout != 'center' %}

      <div class="col-xl-7 col-md-6 bg-img" style="background-image: url('{{ section.settings.image | img_url: '1200x850' }}')"></div>

      <div class="img-row-content col-xl-5 col-md-6 px-xl-3 px-1 py-md-4 py-3 d-md-flex align-items-md-center {% if section.settings.layout == 'left' %} text-md-right justify-content-md-end {% elsif section.settings.layout == 'right' %} text-md-left justify-content-md-start order-md-first{% else %} text-center{% endif %}{% if section.settings.background == 'green' %} bg-primary text-white{% elsif section.settings.background == 'white' %} bg-light text-primary{% endif %}">
        <div>
          {% if section.settings.heading != blank %}
            <h2 class="mb-1">{{ section.settings.heading | escape }}</h2>
          {% endif %}

          {% if section.settings.subheading != blank %}
            <h6>{{ section.settings.subheading | escape }}</h6>
          {% endif %}

          {% if section.settings.button_label != blank and section.settings.button_link != blank %}
            <a href="{{ section.settings.button_link }}" class="btn {% if section.settings.background == 'green' %} btn-outline-white{% elsif section.settings.background == 'white' %} btn-outline-primary{% endif %}">
              {{ section.settings.button_label | escape }}
            </a>
          {% endif %}
        </div>    
      </div>
      
    {% elsif section.settings.layout == 'center' %}

      <div class="col-12 bg-img d-flex align-items-center justify-content-center text-white text-center" style="background-image: url('{{ section.settings.image | img_url: '2600x1000' }}')">
        <div>
          {% if section.settings.heading != blank %}
              <h2 class="mb-1">
              {{ section.settings.heading | escape }} 
              
              {% if section.settings.subheading != blank %}
                <span class="text-light-weight"> {{ section.settings.subheading | escape }}</span>
              {% endif %}
              </h2>
            {% endif %}

            {% if section.settings.button_label != blank and section.settings.button_link != blank %}
              <a href="{{ section.settings.button_link }}" class="btn btn-outline-white">
                {{ section.settings.button_label | escape }}
              </a>
            {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</div>




